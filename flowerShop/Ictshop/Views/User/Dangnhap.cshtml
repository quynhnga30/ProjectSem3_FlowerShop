@model Ictshop.Models.LoginModel

@{ ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/layout.cshtml"; }

<br />
<br />

<div class="card" style="position: relative; left:250px">

    <input type="checkbox" id="flip">
    <div class="cover">
        <div class="front">
            <img src="~/HinhanhSP/login.jpg" />
            
            <div class="text">
                <span class="text-1">Please login to use<br /> the full features of the Website</span>
                <span class="text-2">Let's get started</span>
            </div>
        </div>
        <div class="back">
            <!--<img class="backImg" src="images/backImg.jpg" alt="">-->
            <div class="text">
                <span class="text-1">Complete miles of journey <br> with one step</span>
                <span class="text-2">Let's get started</span>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="forms">
            <div class="form-content">
                <div class="login-form">
                    <div class="title">Login FlowerShop</div>
                    <br />
                    <h3 sstyle="color:#06A3DA">@ViewBag.Fail</h3>


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form action="#">


                        <div class="input-boxes">
                            @Html.LabelFor(model => model.userMail, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-box">

                                @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })

                            </div>


                            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-box">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                            <br />

                            <div class="form-group">
                                <div><input type="submit" value="Login" class="btn btn-primary" style="text-align:center" /></div>

                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    }
</div>

<style>
    .card {
        position: relative;
        max-width: 850px;
        width: 100%;
        background: #fff;
        padding: 40px 30px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.2);
        perspective: 2700px;
    }

        .card .cover {
            position: absolute;
            top: 0;
            left: 50%;
            height: 100%;
            width: 50%;
            z-index: 98;
            transition: all 1s ease;
            transform-origin: left;
            transform-style: preserve-3d;
        }

        .card #flip:checked ~ .cover {
            transform: rotateY(-180deg);
        }

        .card .cover .front,
        .card .cover .back {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
        }

    .cover .back {
        transform: rotateY(180deg);
        backface-visibility: hidden;
    }

    .card .cover::before,
    .card .cover::after {
        content: '';
        position: absolute;
        height: 100%;
        width: 100%;
        background: #eef9ff;
        opacity: 0.5;
        z-index: 12;
    }

    .card .cover::after {
        opacity: 0.3;
        transform: rotateY(180deg);
        backface-visibility: hidden;
    }

    .card .cover img {
        position: absolute;
        height: 100%;
        width: 100%;
        object-fit: cover;
        z-index: 10;
    }

    .card .cover .text {
        position: absolute;
        z-index: 130;
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .cover .text .text-1,
    .cover .text .text-2 {
        font-size: 26px;
        font-weight: 600;
        color: #fff;
        text-align: center;
    }

    .cover .text .text-2 {
        font-size: 15px;
        font-weight: 500;
    }

    .card .forms {
        height: 100%;
        width: 100%;
        background: #fff;
    }

    .card.form-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .form-content .login-form,
    .form-content .signup-form {
        width: calc(100% / 2 - 25px);
    }

    .forms .form-content .title {
        position: relative;
        font-size: 24px;
        font-weight: 500;
        color: #333;
    }

        .forms .form-content .title:before {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            height: 3px;
            width: 25px;
            background: #0dcaf0;
        }

    .forms .signup-form .title:before {
        width: 20px;
    }

    .forms .form-content .input-boxes {
        margin-top: 30px;
    }

    .forms .form-content .input-box {
        display: flex;
        align-items: center;
        height: 50px;
        width: 100%;
        margin: 10px 0;
        position: relative;
    }

    .form-content .input-box input {
        height: 100%;
        width: 100%;
        outline: none;
        border: none;
        padding: 0 30px;
        font-size: 16px;
        font-weight: 500;
        border-bottom: 2px solid rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }

        .form-content .input-box input:focus,
        .form-content .input-box input:valid {
            border-color: #0dcaf0;
        }

    .form-content .input-box i {
        position: absolute;
        color: #7d2ae8;
        font-size: 17px;
    }

    .forms .form-content .text {
        font-size: 14px;
        font-weight: 500;
        color: #333;
    }

        .forms .form-content .text a {
            text-decoration: none;
        }

            .forms .form-content .text a:hover {
                text-decoration: underline;
            }

    .forms .form-content .button {
        color: #fff;
        margin-top: 40px;
    }

        .forms .form-content .button input {
            color: #fff;
            background: #7d2ae8;
            border-radius: 6px;
            padding: 0;
            cursor: pointer;
            transition: all 0.4s ease;
        }

            .forms .form-content .button input:hover {
                background: #5b13b9;
            }

    .forms .form-content label {
        color: #000000;
        cursor: pointer;
    }

        .forms .form-content label:hover {
            text-decoration: underline;
        }

    .forms .form-content .login-text,
    .forms .form-content .sign-up-text {
        text-align: center;
        margin-top: 25px;
    }

    .container #flip {
        display: none;
    }

    .form-content .login-form,
    .form-content .signup-form {
        width: 100%;
    }

    .form-content .signup-form {
        display: none;
    }

    .card #flip:checked ~ .forms .signup-form {
        display: block;
    }

    .card #flip:checked ~ .forms .login-form {
        display: none;
    }
</style>
