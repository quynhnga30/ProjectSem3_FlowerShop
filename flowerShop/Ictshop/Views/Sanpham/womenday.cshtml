
@using Ictshop.Models

@{
    ViewBag.Title = "xemchitiet";
    Layout = "~/Views/Shared/layout.cshtml";

}



<div class="row">

    <div style="background-color: #dc359217 !important"><h3 style="padding-left:20px"> Womenday  </h3></div>

    @foreach (var item in Model)
    {
       
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src="@Url.Content("~" +@item.Anhbia)" class="img-responsive" alt="" width="400" height="400" />
            </a>
            <center>
                <h3>@item.Tensp</h3>
                <h3 style="color:red">Price: @String.Format("{0:0,0}", @item.Giatien)$</h3>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input style="background-color:cornsilk;border-radius:5px; margin: 10px 10px 10px 10px;font-size:12px" type="submit" value="Order" id="bgnGioHang" />

                }
                @*<h4> <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a></h4>*@
            </center>

        </div>
    }

</div>

