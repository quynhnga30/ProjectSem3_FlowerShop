@model IEnumerable<Ictshop.Models.Donhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Order List </h2>


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Nguoidung.Hoten)*@
            User name 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngaydat)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Tinhtrang)*@
            Status 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thanhtoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diachinhanhang)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nguoidung.Hoten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ngaydat)
    </td>
    <td>
        @{ if (@item.Tinhtrang == 0)
            {
                <h5 style="color:red">Waiting for confirmation. </h5> }
                            else if (@item.Tinhtrang == 1)
                            {
            <h5 style="color:green"> Confirmed </h5> }
                            else
                            {
            <h5 style="color:orangered">Waiting for confirmation </h5> } }
    </td>
    <td>
        @{ if (@item.Thanhtoan == 1)
            {
                <div style="color:red">Cash payment</div> }
                                else if (@item.Thanhtoan == 2)
                                {
                <div style="color:brown">Transfer payments</div> } }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Diachinhanhang)
    </td>
    <td>
        @*<button class="btn btn-success">
            @Html.ActionLink("Xác nhận", "Edit", new { id = item.Madon }, new { @style = "color:white;" })
        </button>*@
        <button class="btn btn-primary">
            @Html.ActionLink("Detail ", "Details", new { id = item.Madon }, new { @style = "color:white;" })
        </button>
        @*<button class="btn btn-danger">
            @Html.ActionLink("Xóa", "Delete", new { id = item.Madon }, new { @style = "color:white;" })
        </button>*@
    </td>
</tr>
}

</table>
